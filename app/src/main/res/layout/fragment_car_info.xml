<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="爱车信息"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_title_bar" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="studio.imedia.vehicleinspection.fragments.CarInfoFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#efefef">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_border_color_primary"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_driverlicence" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:text="上传行驶证"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height_car_info"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="车牌号码"
                android:textColor="@color/color_text_default"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height_car_info"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="16sp"
                android:paddingRight="16sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品牌车系"
                    android:textColor="@color/color_text_default"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="@dimen/length_icon_next"
                    android:layout_height="@dimen/length_icon_next"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_next" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height_car_info"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="16sp"
                android:paddingRight="16sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="具体车型"
                    android:textColor="@color/color_text_default"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="@dimen/length_icon_next"
                    android:layout_height="@dimen/length_icon_next"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_next" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height_car_info"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="车架号码"
                android:textColor="@color/color_text_default"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height_car_info"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="发动机号"
                android:textColor="@color/color_text_default"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height_car_info"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="注册日期"
                android:textColor="@color/color_text_default"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height_car_info"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="16sp"
                android:paddingRight="16sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="具体车型"
                    android:textColor="@color/color_text_default"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="@dimen/length_icon_next"
                    android:layout_height="@dimen/length_icon_next"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_next" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/btn_bg"
                    android:text="保存"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>